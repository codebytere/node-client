{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"outDir": "lib",
		"lib": [
			"es6",
			"es2016.array.include",
			"dom"
		],
		"sourceMap": true,
		"rootDir": "src",
		"experimentalDecorators": true,
		"allowJs": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"incremental": true
	},
	"exclude": [
		"node_modules",
		"lib",
		"jest.config.js",
		"coverage",
		"jest.setup.js"
	]
}